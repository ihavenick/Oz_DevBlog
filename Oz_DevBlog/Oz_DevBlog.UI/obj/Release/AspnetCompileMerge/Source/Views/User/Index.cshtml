
@{
    ViewBag.Title = "Index";
}
@using Oz_DevBlog.Data.Identity_Entity
@using Oz_DevBlog.Data.Model_Entity
@model ApplicationUser

<h2>Index</h2>

<div class="col-md-12">
    <div class="col-md-6 pull-left">
        @if (Model.ImageofUser == null)
    {
        <img style="width:200px ; height:200px" src="https://www.kirkleescollege.ac.uk/wp-content/uploads/2015/09/default-avatar.png" alt="Visitor1">
    }
    else
    {
        <img style="width:200px ; height:200px" src="@Model.ImageofUser.ImagePath" alt="Visitor1">
    }
        </br>
        <p>@Model.FirstName @Model.LastName</p>
        <p>@Model.Email</p>
        <p>@Model.Address</p>
    </div>

    <div class="col-md-6 pull-left">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Project</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.FirstName, "First Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.FirstName)
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.LastName, "Last Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.LastName)
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Address, "Address", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Address)
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.PhoneNumber, "Phone Number", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.PhoneNumber)
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.UserName, "UserName", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.UserName)
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.SecurityStamp, "SecurityStamp", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.SecurityStamp)
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.PasswordHash, "Password Hash", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.PasswordHash)
                    </div>
                </div>


                <div class="form-group">
                @Html.LabelFor(model => model.ImageID, "ImageID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ImageID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ImageID, "", new { @class = "text-danger" })
                </div>
                 </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-default" />
                    </div>
                </div>
                

            </div>
        }

</div>