<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Öz Blog Admin Paneli</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <ul class="nav navbar-nav">
                    @Html.ActionLink("Öz Devblog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    <li> <a href="@Url.Action("Index","AdminDescs")">Admin desc</a></li>
                    <li> <a href="@Url.Action("Index","Blogs")">Blog</a></li>
                    <li> <a href="@Url.Action("Index","BlogTypes")">Blog Tipi</a></li>
                    <li> <a href="@Url.Action("Index","Certifications")">Sertifikalar</a>       </li>
                    <li> <a href="@Url.Action("Index","Educations")">Eğitimler</a>              </li>
                    <li> <a href="@Url.Action("Index","Employments")">İşler</a>                 </li>
                    <li> <a href="@Url.Action("Index","Images")">Resimler</a>                   </li>
                    <li> <a href="@Url.Action("Index","Projects")">Projeler</a>                 </li>
                    <li> <a href="@Url.Action("Index","Seminars")">Seminerler</a>               </li>
                    <li> <a href="@Url.Action("Index","Skills")">Beceriler</a>                  </li>
                    <li> <a href="@Url.Action("Index","SkillTypes")">Beceri tip.</a>         </li>
                    <li> <a href="@Url.Action("Index","SocialMedias")">Sosyal icon.</a>       </li>
                    <li> <a href="@Url.Action("Index","Tags")">Etiketler</a>                    </li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>