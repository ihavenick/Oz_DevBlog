
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}
@using Oz_DevBlog.UI.Models.AccountVM;
@model RegisterVM


<div class="col-md-6 col-md-offset-3">
    @Html.ValidationSummary()
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="panel panel-primary">
            <div class="panel-heading text-center">Kayıt Ekranı</div>
            <div class="panel-body">
                <div class="col-md-12" style="margin-bottom:5px">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.FirstName)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                    </div>
                </div>


                <div class="col-md-12" style="margin-bottom:5px">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.LastName)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                    </div>
                </div>


                <div class="col-md-12" style="margin-bottom:5px">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Address)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                    </div>
                </div>


                <div class="col-md-12" style="margin-bottom:5px">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Email)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-md-12" style="margin-bottom:5px">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.UserName)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-md-12" style="margin-bottom:5px">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Password)
                    </div>
                    <div class="col-md-8">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-md-12" style="margin-bottom:5px">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.ConfirmPassword)
                    </div>
                    <div class="col-md-8">
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>



              

                <div class="col-md-12">

                    <button type="submit" class="btn btn-success pull-right">Kayıt Ol</button>
                    @Html.ActionLink("Login Ekranına Git", "Login", "Account", null, new { @class = "btn btn-warning pull-right", @style = "margin-right:10px" })

                </div>
            </div>
        </div>

    }

</div>

