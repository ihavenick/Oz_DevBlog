
@{
    Layout = null;
}

@using Oz_DevBlog.Data.Model_Entity
@model Blog 


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@Model.BlogTitle | Ata Çetin .Net</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@Model.BlogContent">
    <meta name="author" content="Ata Çetin">

    <!-- Your styles -->
    <link href="~/Assets/css/style.css" rel="stylesheet" media="screen">
    <!-- Skins -->
    <link href="~/Assets/css/skins/blue/blue.css" rel="stylesheet" media="screen" class="skin">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Skins Changer-->
    <script type="text/javascript" src="http://www.google.com/jsapi"></script>

</head>
<body>

    <!-- Logo -->
    <header class="logo animated fadeInDown delay1" id="about">
        <div class="container">
            <div class="row-fluid">
                <div class="title_logo">
                    <h1>@ViewBag.Admin.FirstName @ViewBag.Admin.LastName <small>.NET Yazılım Uzmanı</small></h1>
                </div>
            </div>
        </div>
    </header>
    <!-- End Logo -->
    <!-- Nav-->
    <nav class="nav">
        <div class="container">
            <div class="row-fluid">
                <ul>
                    <li><a href="@Url.Action("Index","Home")">Geri Dön</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Nav-->
    <!-- Info Area - Skills-->
    <section class="info_area">
        <div class="container">

            <div class="row-fluid">

                <!-- Blog Post-->
                <div class="span9">

                    <!-- Post-->
                    <div class="post single">
                        <a href="single_post.html">
                            <h1>@Model.BlogTitle</h1>
                        </a>
                        <ul class="meta">
                            <li>Yayınlayan : </li>
                            <li class="author"><a href="#"> Admin'in Adı Gelicek</a></li>
                            <li class="comments-numb"><a href="single_post.html">Yorum Sayısı Gelicek</a></li>
                        </ul>
                        <div class="row-fluid image_post">
                            <img src="@Model.Image.ImagePath" alt="Image">
                        </div>

                        <div class="row-fluid">

                            <p>@Model.BlogContent</p>



                        </div>
                    </div>
                    <!-- End Post-->

                    <h4>(Yorum Sayısı Gelicek) Adet Yorum</h4>

                    <!-- Comment-->
                    <div class="row-fluid comment">
                        <div class="span3">
                            <div class="image-visitor">
                                <img src="img/team/1.jpg" alt="Visitor1">
                            </div>
                        </div>
                        <div class="span9">
                            <div class="title_comment">
                                <span><a href="#"> Yorumun yapanın adı </a></span>
                                <span>Yorum Yapılan Tarih Gün/Ay/Yıl </span>

                            </div>
                            <p>Yorum İçerik Gelicek</p>
                        </div>
                    </div>
                    <!-- End Comment-->
                    <!-- Comment-->
                    <div class="row-fluid comment">
                        <div class="span3">
                            <div class="image-visitor">
                                <img src="img/team/1.jpg" alt="Visitor1">
                            </div>
                        </div>
                        <div class="span9">
                            <div class="title_comment">
                                <span><a href="#"> Yorumun yapanın adı </a></span>
                                <span>Yorum Yapılan Tarih Gün/Ay/Yıl </span>

                            </div>
                            <p>Yorum İçerik Gelicek</p>
                        </div>
                    </div>
                    <!-- End Comment-->



                    <h4>Yorum Yap</h4>

                    <form class="form_comment">
                        <input type="text" placeholder="Adınızı Giriniz" name="Name" required>
                        <input type="email" placeholder="Email Giriniz" name="Email" required>
                        <textarea placeholder="Mesajınızı Giriniz" name="message" required></textarea>
                        <input type="submit" name="Submit" value="Yorum Gönder!" class="button">
                    </form>

                </div>
                <!-- End Blog Post-->
                <!-- Sidebars-->
                <div class="span3">

                    <aside>
                        <form role="search" method="get" id="searchform" action="#">
                            <div>
                                <h4>Arama Yap</h4>
                                <input type="text" value="" name="s" id="s">
                                <input type="submit" id="searchsubmit" value="Search" class="button">
                            </div>
                        </form>
                    </aside>

                    <aside>
                        <h4>Blog Categories</h4>
                        <ul class="check">
                            @foreach (BlogType item in ViewBag.Bty)
                            {
                                <li><i class="icon-ok"></i>@item.BlogTypeName</li>

                            }
                        </ul>
                    </aside>



                    <aside>
                        <h4>Etiketler</h4>
                        <ul class="tags">
                            @foreach (Tag item in ViewBag.Tag)
                            {
                                <li><a href="#">@item.TagName</a></li>

                            }
                        </ul>
                    </aside>





            </div>

        </div>
    </section>
    <!-- End Section Area - Skills-->


    <footer>
        <h6>© 2016 - YG3-8109</h6>
    </footer>

    <!-- ======================= JQuery libs =========================== -->
    <!-- Always latest version of jQuery-->
    <script src="~/Assets/js/jquery-1.8.3.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.1/jquery-ui.min.js"></script>
    <!--Nav-->
    <script type="text/javascript" src="~/Assets/js/nav/tinynav.js"></script>
    <script src="~/Assets/js/nav/jquery.sticky.js" type="text/javascript"></script>
    <!--Ligbox-->
    <script type="text/javascript" src="~/Assets/js/fancybox/jquery.fancybox-1.3.1.js"></script>
    <!--Scroll-->
    <script src="~/Assets/js/scroll/smooth-scroll.js" type="text/javascript"></script>
    <script src="~/Assets/js/scrollbar/jquery.mCustomScrollbar.concat.min.js"></script>
    <!--Theme Options-->
    <script type="text/javascript" src="~/Assets/js/theme-options/theme-options.js"></script>
    <script type="text/javascript" src="~/Assets/js/theme-options/jquery.cookies.js"></script>
    <!-- Bootstrap.js-->
    <script src="~/Assets/js/bootstrap/bootstrap.js"></script>
    <!--fUNCTIONS-->
    <script type="text/javascript" src="~/Assets/js/jquery-func.js"></script>
    <!-- ======================= End JQuery libs =========================== -->

</body>
</html>